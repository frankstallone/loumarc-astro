---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { Picture } from 'astro:assets';

const meta = {
  title:
    'Thank you for contacting Loumarc Signs | High-end full service sign experts',
  canonicalURL: 'https://loumarcsigns.com',
};

import headerImg from '../assets/Amazon-trusts-Loumarc-Signs-01.jpg';
---

<Layout meta={meta} overlay={true}>
  <a href="#main" class="sr-only sr-only-focusable">Skip to content</a>
  <Header location="home" />
  <div class="center" data-location="home" id="main">
    <div class="cover" data-location="home">
      <div class="flow">
        <h1
          class="text-center font-weight-base font-size-6 max-inline-size-full step-7"
        >
          All signs point somewhere else.
        </h1>
        <h2
          class="text-center font-weight-base font-size-6 max-inline-size-full"
        >
          Unfortunately this page does not exist.
        </h2>
      </div>
      <Picture
        src={headerImg}
        widths={[520, 700, 2000]}
        width={2000}
        height={631}
        class="object-contain h-auto"
        alt="Amazon trusts Loumarc Signs to create their signs"
        fetchpriority="high"
        quality={80}
        formats={['avif', 'webp']}
      />
    </div>
  </div>
</Layout>
