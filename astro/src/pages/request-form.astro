---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import RequestForm from '../components/RequestForm.astro';

const meta = {
  title: 'Request a Signage Quote | Loumarc Signs',
  description:
    'Share a few details about your project and request more information from Loumarc Signs.',
  canonicalURL: 'https://loumarcsigns.com/request-form/',
  robots: 'noindex, nofollow',
};
---

<Layout meta={meta}>
  <a href="#main" class="sr-only sr-only-focusable">Skip to content</a>
  <header>
    <Header />
    <div class="section spot-color-gray">
      <svg
        aria-hidden="true"
        class="slant"
        viewBox="0 0 1440 67"
        preserveAspectRatio="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M0,66.398L1440,18.066L1440,0L0,0L0,66.398Z"></path>
      </svg>
      <div class="section__inner region">
        <div class="center">
          <div class="box">
            <h1 class="skewer leading-2">Request a Signage Quote</h1>
            <h2 class="step-2 skewer">
              Share a few details and we will follow up with pricing, timelines,
              and next steps.
            </h2>
          </div>
        </div>
      </div>
      <svg
        aria-hidden="true"
        class="slant"
        viewBox="0 0 1440 67"
        preserveAspectRatio="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M0,66.398L1440,18.066L1440,0L0,0L0,66.398Z"></path>
      </svg>
    </div>
  </header>
  <main role="main" id="main">
    <article class="box">
      <RequestForm />
    </article>
  </main>
</Layout>
