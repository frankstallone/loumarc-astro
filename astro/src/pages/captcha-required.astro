---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getSiteSettings } from '../api/sanity';

const settings = await getSiteSettings();

const meta = {
  title: 'Enable JavaScript to submit | Loumarc Signs',
  canonicalURL: 'https://loumarcsigns.com/captcha-required/',
};
---

<Layout meta={meta} overlay={true}>
  <a href="#main" class="sr-only sr-only-focusable">Skip to content</a>
  <header>
    <Header location="home" />
    <div class="section spot-color-gray">
      <svg
        aria-hidden="true"
        class="slant"
        viewBox="0 0 1440 67"
        preserveAspectRatio="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M0,66.398L1440,18.066L1440,0L0,0L0,66.398Z"></path>
      </svg>
      <div class="section__inner region">
        <div class="center">
          <div class="box">
            <h1 class="skewer leading-2">JavaScript is required to submit</h1>
          </div>
        </div>
      </div>
      <svg
        aria-hidden="true"
        class="slant"
        viewBox="0 0 1440 67"
        preserveAspectRatio="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path d="M0,66.398L1440,18.066L1440,0L0,0L0,66.398Z"></path>
      </svg>
    </div>
  </header>
  <main id="main" class="region">
    <div class="wrapper flow prose" style="--measure: 60rem;">
      <p>
        For security, form submissions use a verification step that requires
        JavaScript. Please enable JavaScript in your browser and try again.
      </p>
      <p>If you prefer, contact us directly:</p>
      <ul>
        <li>
          Call us at
          <a href="tel:+19085754000">{settings.phoneNumber}</a>
        </li>
      </ul>
      <p>You may also navigate back and continue browsing our site.</p>
    </div>
  </main>
</Layout>
