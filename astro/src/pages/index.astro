---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import { getFirstBlogPost } from "../api/sanity";
import PortableText from "../components/PortableText.astro";
import { urlForImage } from "../api/urlForImage";

const data = await getFirstBlogPost();

const meta = {
  title: "Loumarc Signs",
};
---

<Layout meta={meta}>
  <div class="center">
    <div class="cover">
      <Header />
      <h1>Bringing visibility to your goals</h1>
    </div>
  </div>
  <main>
    <form name="home-page-test" method="POST" data-netlify="true">
      <p>
        <label>Your Name: <input type="text" name="name" /></label>
      </p>
      <p>
        <label>Your Email: <input type="email" name="email" /></label>
      </p>
      <p>
        <label
          >Your Role: <select name="role[]" multiple>
            <option value="leader">Leader</option>
            <option value="follower">Follower</option>
          </select></label
        >
      </p>
      <p>
        <label>Message: <textarea name="message"></textarea></label>
      </p>
      <p>
        <button type="submit">Send</button>
      </p>
    </form>
  </main>
</Layout>
